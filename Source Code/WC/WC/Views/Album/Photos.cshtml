                                                <li>
                                                    <a href="javascript:void(0);" class="delete-post-command" onclick="DeletePhoto(this);" data-item-id="@Model.Photo[i].PhotoID">
                                                        <span class="fa fa-remove"></span>&nbsp;&nbsp;Delete
                                                    </a>
                                                </li>
                                                <li>
