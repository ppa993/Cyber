@model List<WC.Data.Post>

@foreach (var item in Model)
{
    <li class="timeline-item">
        <div class="panel panel-white">
            <div class="panel-body">
                <div class="timeline-item-header">
                    <img src="~/Content/Images/avatar5.png" alt="">
                    <p>@item.User.FirstName @item.User.LastName</p>
                    <small>@item.PostedDate</small>
                </div>
                <div class="timeline-item-post">
                    <p>@item.PostContent</p>
                    <div class="timeline-options">
                        <a href="#"><i class="icon-like"></i> Like (@item.PostLikes.Count)</a>
                        <a href="#"><i class="icon-bubble"></i> Comment (@item.Comments.Count)</a>
                    </div>
                    <textarea class="form-control" placeholder="Write a comment..."></textarea>
                </div>
            </div>
        </div>
    </li>
}

