                                    <a href="#"><i class="icon-camera"></i></a>
                                    <a href="#"><i class="icon-camcorder"></i></a>
                                    <a href="#"><i class="icon-music-tone-alt"></i></a>
                                    <a href="#"><i class="icon-link"></i></a>
                                    <a href="#"><i class="icon-microphone"></i></a>
